#include <stdio.h>
#include <stdlib.h>
int i,j;
main()

{     printf("*   ");
     
            
      for(i=1;i<=10; i++)
      printf("%5d",i);
      printf("\n\n"); 
      for(i=1;i<=10; i++)
      {
       printf(" %d  ",i,"\n");
       for (j=1;j<=10;j++)
          {
           if(i<10) printf("%5d",i*j);
           if(i==10)   printf("%4d ",i*j);
           }
           
       printf("\n");
       }
        
printf("\n");
system("pause");
return 0;
}



